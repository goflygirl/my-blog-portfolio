---
const projects = [
  {
    title: "Project Portfolio Website",
    description: "A modern portfolio website built with Astro and Tailwind CSS, featuring a blog and project showcase.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400&h=200&fit=crop&auto=format",
    technologies: ["Astro", "Tailwind CSS", "TypeScript"],
    liveUrl: "#",
    sourceUrl: "#"
  },
  {
    title: "Task Management App",
    description: "A collaborative task management platform with real-time updates and team collaboration features.",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=400&h=200&fit=crop&auto=format",
    technologies: ["React", "Node.js", "MongoDB"],
    liveUrl: "#",
    sourceUrl: "#"
  }
];
---

<section id="projects" class="py-16 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Featured Projects</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <img 
            src={project.image} 
            alt={project.title} 
            class="w-full h-48 object-cover"
          >
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex gap-4">
              <a 
                href={project.liveUrl} 
                class="text-blue-600 hover:text-blue-700 font-medium"
              >
                Live Demo
              </a>
              <a 
                href={project.sourceUrl} 
                class="text-gray-600 hover:text-gray-700 font-medium"
              >
                Source Code
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
