---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);
---

<Layout title="Blog - Ines Repnik">
  <Header />
  <main class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-4xl font-bold mb-12">Blog</h1>
      
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="border-l-4 border-blue-500 pl-6 hover:bg-gray-50 transition-colors p-4 -ml-4 rounded-r-lg">
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-2">
              <time>{new Date(post.data.publishDate).toLocaleDateString()}</time>
              {post.data.tags && (
                <>
                  <span>•</span>
                  <div class="flex gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                </>
              )}
            </div>
            <h2 class="text-xl font-semibold mb-2">
              <a 
                href={`/blog/${post.slug}`} 
                class="hover:text-blue-600 transition-colors"
              >
                {post.data.title}
              </a>
            </h2>
            <p class="text-gray-600 mb-3">{post.data.description}</p>
            <a 
              href={`/blog/${post.slug}`} 
              class="text-blue-600 hover:text-blue-700 font-medium"
            >
              Read more →
            </a>
          </article>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
